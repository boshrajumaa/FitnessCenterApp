@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null; // Varsayılan düzeni (Layout) iptal ediyoruz, özel tam sayfa tasarım kullanacağız.
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SAU Fitness</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://bootswatch.com/5/pulse/bootstrap.min.css" />

    <style>
        /* Genel Sayfa Ayarları */
        body {
            font-family: 'Poppins', sans-serif; /* Yazı tipi ayarı */
            height: 100vh; /* Tam ekran yüksekliği */
            overflow: hidden; /* Sayfa kaydırma çubuğunu gizle */
        }

        .login-container {
            height: 100vh;
            display: flex; /* Ekranı ikiye bölmek için Flexbox */
        }

        /* --- SOL BÖLÜM: RESİM ALANI --- */
        .image-section {
            flex: 1; /* Ekranın yarısını kapla */
            /* Arka plan resmi (Spor salonu görseli) */
            background: url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=2070&auto=format&fit=crop') no-repeat center center;
            background-size: cover;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Resim üzerindeki şeffaf katman (Yazı okunabilirliği için) */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(89, 49, 150, 0.6); /* Mor renkli şeffaf filtre */
        }

        /* Resim üzerindeki slogan yazısı */
        .image-text {
            position: relative;
            z-index: 2;
            color: white;
            text-align: center;
            padding: 20px;
        }

        /* --- SAĞ BÖLÜM: FORM ALANI --- */
        .form-section {
            flex: 0.8; /* Resimden biraz daha dar */
            background-color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 40px;
            box-shadow: -5px 0 15px rgba(0,0,0,0.1); /* Hafif gölge */
        }

        .login-form {
            width: 100%;
            max-width: 400px; /* Form genişliğini sınırla */
        }

        .brand-logo {
            font-size: 2rem;
            font-weight: 700;
            color: #593196; /* Tema rengi */
            margin-bottom: 30px;
            display: block;
            text-align: center;
            text-decoration: none;
        }

        /* Input (Giriş) Alanlarının Tasarımı */
        .form-floating > .form-control {
            border-radius: 10px;
            border: 2px solid #eee;
        }
        
        .form-floating > .form-control:focus {
            border-color: #593196; /* Tıklanınca mor çerçeve */
            box-shadow: none;
        }

        /* Giriş Butonu Tasarımı */
        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* Gradyan Renk */
            border: none;
            border-radius: 50px; /* Yuvarlak kenarlar */
            padding: 12px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: transform 0.2s; /* Animasyon geçişi */
        }

        .btn-login:hover {
            transform: scale(1.02); /* Üzerine gelince hafif büyüme efekti */
            box-shadow: 0 5px 15px rgba(118, 75, 162, 0.4);
        }

        /* Mobil Uyumluluk (Responsive) */
        @@media (max-width: 768px) {
            .image-section {
                display: none; /* Mobilde resmi gizle, sadece formu göster */
            }
            .form-section {
                flex: 1;
            }
        }
    </style>
</head>
<body>

    <div class="container-fluid p-0">
        <div class="login-container">
            
            <div class="image-section">
                <div class="overlay"></div>
                <div class="image-text animate__animated animate__fadeIn">
                    <h1 class="display-3 fw-bold">SAU Fitness</h1>
                    <p class="lead">Güçlü ol. Sağlıklı yaşa. Sınırlarını zorla.</p>
                </div>
            </div>

            <div class="form-section">
                <div class="login-form">
                    <a href="/" class="brand-logo">🏋️‍♂️ Fitness Center</a>
                    
                    <h3 class="fw-bold mb-1">Tekrar Hoşgeldiniz!</h3>
                    <p class="text-muted mb-4">Lütfen hesabınıza giriş yapın.</p>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted">📧 E-posta Adresi</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                            <label asp-for="Input.Password" class="text-muted">🔒 Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <label asp-for="Input.RememberMe" class="form-check-label text-muted">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    Beni Hatırla
                                </label>
                            </div>
                            <a href="#" class="text-decoration-none small text-primary fw-bold">Şifremi Unuttum?</a>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-login text-white">
                                Giriş Yap
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <span class="text-muted">Hesabınız yok mu?</span>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none">Hemen Kayıt Ol</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>