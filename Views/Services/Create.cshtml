@model FitnessCenterApp.Models.Service

@{
    ViewData["Title"] = "Yeni Hizmet";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">➕ Yeni Hizmet Tanımla</h4>
                </div>

                <div class="card-body bg-light">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold mb-1"></label>
                            <input asp-for="Name" class="form-control shadow-sm" placeholder="Örn: Yoga Dersi" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="Duration" class="control-label fw-bold mb-1"></label>
                                <div class="input-group">
                                    <input asp-for="Duration" class="form-control shadow-sm" type="number" />
                                    <span class="input-group-text">dk</span>
                                </div>
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="Price" class="control-label fw-bold mb-1"></label>
                                <div class="input-group">
                                    <span class="input-group-text">₺</span>
                                    <input asp-for="Price" class="form-control shadow-sm" type="number" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="control-label fw-bold mb-1"></label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="3" placeholder="Hizmet hakkında kısa bilgi..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg shadow">💾 Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">↩️ Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}