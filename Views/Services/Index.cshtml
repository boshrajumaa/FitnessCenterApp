@model IEnumerable<FitnessCenterApp.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-bold text-primary">🧘 Hizmetlerimiz</h1>
        <a asp-action="Create" class="btn btn-success btn-lg rounded-pill shadow-sm">
            ➕ Yeni Hizmet Ekle
        </a>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">📋 Spor Salonu Hizmetleri</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Duration)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle">
                            <td class="fw-bold text-primary">@Html.DisplayFor(modelItem => item.Name)</td>

                            <td>
                                <span class="badge bg-secondary rounded-pill">
                                    ⏱️ @Html.DisplayFor(modelItem => item.Duration) dk
                                </span>
                            </td>

                            <td>
                                <span class="badge bg-success rounded-pill fs-6">
                                    💰 @Html.DisplayFor(modelItem => item.Price) ₺
                                </span>
                            </td>

                            <td class="text-muted small">@Html.DisplayFor(modelItem => item.Description)</td>

                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-white" title="Düzenle">✏️</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white" title="Detaylar">ℹ️</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Sil">🗑️</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>