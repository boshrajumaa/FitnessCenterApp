@model FitnessCenterApp.Models.Service

@{
    ViewData["Title"] = "Hizmet Sil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">⚠️ Hizmet Silme Onayı</h3>
                </div>
                <div class="card-body text-center p-5">
                    <h5 class="text-muted mb-4">Bu hizmeti silmek istediğinize emin misiniz?</h5>

                    <div class="bg-light p-3 rounded mb-4 border">
                        <h2 class="text-primary fw-bold">@Html.DisplayFor(model => model.Name)</h2>
                        <div class="d-flex justify-content-center gap-3 mt-2">
                            <span class="badge bg-secondary">⏱️ @Html.DisplayFor(model => model.Duration) dk</span>
                            <span class="badge bg-success">💰 @Html.DisplayFor(model => model.Price) ₺</span>
                        </div>
                        <p class="mt-3 text-muted">@Html.DisplayFor(model => model.Description)</p>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-danger btn-lg shadow">🗑️ Evet, Sil</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg shadow">↩️ Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>