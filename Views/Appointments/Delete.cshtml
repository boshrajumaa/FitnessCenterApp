@model FitnessCenterApp.Models.Appointment

@{
    ViewData["Title"] = "Randevu İptal";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">⚠️ Randevu İptali</h4>
                </div>
                <div class="card-body text-center p-4">
                    <p class="lead">Bu randevuyu iptal etmek istediğinize emin misiniz?</p>

                    <div class="bg-light p-3 rounded border mb-4">
                        <h5 class="text-primary">@Model.Service?.Name</h5>
                        <p class="mb-1"><strong>Eğitmen:</strong> @Model.Trainer?.FullName</p>
                        <p class="mb-0"><strong>Tarih:</strong> @Model.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</p>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4">Evet, İptal Et</button>
                        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Vazgeç</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>