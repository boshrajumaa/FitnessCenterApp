@model FitnessCenterApp.Models.Appointment

@{
    ViewData["Title"] = "Randevu Al";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white text-center py-3">
                    <h4 class="mb-0">📅 Yeni Randevu Oluştur</h4>
                    <p class="mb-0 small text-white-50">Size uygun zamanı ve eğitmeni seçin</p>
                </div>

                <div class="card-body p-4 bg-light">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">🧘 Hizmet Seçiniz</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-activity"></i></span>
                                    <select asp-for="ServiceId" class="form-select shadow-sm" asp-items="ViewBag.ServiceId">
                                        <option value="" selected disabled>-- Hizmet Seçin --</option>
                                    </select>
                                </div>
                                <small class="text-muted">Örn: Yoga, Pilates, Fitness</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">💪 Eğitmen Seçiniz</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-person-badge"></i></span>
                                    <select asp-for="TrainerId" class="form-select shadow-sm" asp-items="ViewBag.TrainerId">
                                        <option value="" selected disabled>-- Eğitmen Seçin --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="TrainerId" class="text-danger fw-bold"></span>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="AppointmentDate" class="form-label fw-bold">🕒 Tarih ve Saat</label>
                            <input asp-for="AppointmentDate" class="form-control shadow-sm" type="datetime-local" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <span class="me-2">⚠️</span>
                            <div class="small">
                                Randevu saatiniz, eğitmenin müsaitlik durumuna göre onaylanacaktır.
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info text-white btn-lg shadow rounded-pill">
                                ✅ Randevuyu Onayla
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                                ❌ İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}