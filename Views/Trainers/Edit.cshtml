@model FitnessCenterApp.Models.Trainer

@{
    ViewData["Title"] = "Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow border-0">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">✏️ Eğitmen Bilgilerini Düzenle</h4>
                </div>

                <div class="card-body bg-light">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="control-label fw-bold"></label>
                            <input asp-for="FullName" class="form-control shadow-sm" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Specialization" class="control-label fw-bold"></label>
                            <input asp-for="Specialization" class="form-control shadow-sm" />
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ImageUrl" class="control-label fw-bold"></label>
                            <input asp-for="ImageUrl" class="form-control shadow-sm" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="WorkStartHour" class="control-label fw-bold"></label>
                                <input asp-for="WorkStartHour" type="number" min="0" max="23" class="form-control shadow-sm" />
                                <span asp-validation-for="WorkStartHour" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="WorkEndHour" class="control-label fw-bold"></label>
                                <input asp-for="WorkEndHour" type="number" min="0" max="23" class="form-control shadow-sm" />
                                <span asp-validation-for="WorkEndHour" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning text-white btn-lg shadow">💾 Değişiklikleri Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">↩️ İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}