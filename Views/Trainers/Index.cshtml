@model IEnumerable<FitnessCenterApp.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-bold text-primary">💪 Eğitmen Kadrosu</h1>
        <a asp-action="Create" class="btn btn-success btn-lg rounded-pill shadow-sm">
            ➕ Yeni Eğitmen Ekle
        </a>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">📋 Kayıtlı Eğitmenler Listesi</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Specialization)</th>
                        <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle">
                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>
                                <span class="badge bg-info text-dark rounded-pill">
                                    @Html.DisplayFor(modelItem => item.Specialization)
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="Foto" class="rounded-circle" width="40" height="40" />
                                }
                                else
                                {
                                    <span>📷 Yok</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-white" title="Düzenle">✏️</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white" title="Detaylar">ℹ️</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Sil">🗑️</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>