<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SAU Fitness</title>

    <link rel="stylesheet" href="https://bootswatch.com/5/pulse/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-activity me-2"></i>SAU Fitness
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">Yönetim</a>
                                <div class="dropdown-menu border-0 shadow-sm rounded-3 mt-2">
                                    <a class="dropdown-item py-2" asp-controller="Trainers" asp-action="Index"><i class="bi bi-people me-2"></i>Eğitmenler</a>
                                    <a class="dropdown-item py-2" asp-controller="Services" asp-action="Index"><i class="bi bi-card-checklist me-2"></i>Hizmetler</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item py-2" asp-controller="Appointments" asp-action="Index"><i class="bi bi-calendar-check me-2"></i>Randevular</a>
                                </div>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointments" asp-action="Create">Randevu Al</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-bold" asp-controller="AI" asp-action="Index">
                                    <i class="bi bi-robot me-1"></i>AI Antrenör
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ApiReport">API Raporu</a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 100px; min-height: 80vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted text-center">
        <div class="container">
            &copy; 2025 - <strong>SAU Fitness Center</strong> - Web Programlama Projesi
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>