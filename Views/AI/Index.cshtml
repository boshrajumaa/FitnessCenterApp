@model FitnessCenterApp.Models.AIPlanViewModel

@{
    ViewData["Title"] = "AI Dönüşüm";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h1 class="display-1 mb-0">🧬</h1>
                    <h4 class="mt-2">AI Kişisel Antrenör</h4>
                    <p class="mb-0 text-white-50">Bilgileri doldurun VEYA sadece fotoğraf yükleyin.</p>
                </div>
                <div class="card-body p-4 bg-light">
                    <form asp-action="GeneratePlan" method="post" enctype="multipart/form-data">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small mb-3" role="alert"></div>

                        <div class="alert alert-info small mb-4">
                            <i class="bi bi-info-circle-fill me-1"></i> İpucu: Hiçbir bilgi girmeden sadece fotoğraf yüklerseniz, AI görsel analize göre bir plan oluşturur.
                        </div>

                        <div class="row">
                            <div class="col-md-4 form-floating mb-3">
                                <input asp-for="Age" class="form-control" placeholder="Yaş" />
                                <label asp-for="Age" class="ps-4">🎂 Yaş</label>
                                <span asp-validation-for="Age" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4 form-floating mb-3">
                                <input asp-for="Height" class="form-control" placeholder="Boy" />
                                <label asp-for="Height" class="ps-4">📏 Boy (cm)</label>
                                <span asp-validation-for="Height" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4 form-floating mb-3">
                                <input asp-for="Weight" class="form-control" placeholder="Kilo" />
                                <label asp-for="Weight" class="ps-4">⚖️ Kilo (kg)</label>
                                <span asp-validation-for="Weight" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-floating mb-3">
                                <select asp-for="Gender" class="form-select">
                                    <option value="">-- Seçiniz --</option>
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                </select>
                                <label asp-for="Gender" class="ps-4">Cinsiyet</label>
                            </div>
                            <div class="col-md-6 form-floating mb-3">
                                <select asp-for="BodyType" class="form-select">
                                    <option value="">-- Seçiniz --</option>
                                    <option value="Ectomorph">Ectomorph (Zayıf)</option>
                                    <option value="Mesomorph">Mesomorph (Atletik)</option>
                                    <option value="Endomorph">Endomorph (Yapılı/Geniş)</option>
                                </select>
                                <label asp-for="BodyType" class="ps-4">Vücut Tipi</label>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="Goal" class="form-select">
                                <option value="">-- Seçiniz (Varsayılan: Sağlıklı Yaşam) --</option>
                                <option value="Kilo Verme">🏃‍♂️ Kilo Vermek (Fit Görünüm)</option>
                                <option value="Kas Kazanma">💪 Kas Kazanmak (Bodybuilder)</option>
                                <option value="Sağlıklı Yaşam">🧘 Sağlıklı Yaşam (Dengeli)</option>
                            </select>
                            <label asp-for="Goal" class="ps-4">🎯 Hedefiniz</label>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="UserMessage" class="form-control" placeholder="Özel notunuz..." style="height: 100px"></textarea>
                            <label asp-for="UserMessage" class="ps-4">💬 Eklemek İstedikleriniz</label>
                        </div>

                        <div class="mb-4 bg-white p-3 rounded border border-primary shadow-sm">
                            <label asp-for="UserImage" class="form-label fw-bold text-primary">📸 Vücut Fotoğrafınız (Önerilen)</label>
                            <input asp-for="UserImage" class="form-control" type="file" accept="image/*">
                            <div class="form-text text-muted small">
                                <i class="bi bi-magic"></i> Bilgi girmeseniz bile fotoğraf yüklerseniz AI sizi analiz eder ve görsel dönüşüm oluşturur.
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow">
                                ✨ Analizi Başlat
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model?.AIResponse))
            {
                <div class="card shadow-lg border-success h-100 animate__animated animate__fadeIn">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">✅ Dönüşüm Planınız Hazır</h5>
                        <small class="badge bg-white text-success">@Model.Goal</small>
                    </div>
                    <div class="card-body p-4">

                        <div class="mb-4">
                            @Html.Raw(Model.AIResponse)
                        </div>

                        <hr />

                        @if (!string.IsNullOrEmpty(Model.OriginalImageBase64) || !string.IsNullOrEmpty(Model.GeneratedImageBase64))
                        {
                            <h5 class="fw-bold text-center text-primary mb-4">🔄 Öncesi ve Sonrası</h5>
                            <div class="row text-center g-3">
                                <div class="col-md-6 animate__animated animate__fadeInLeft">
                                    @if (!string.IsNullOrEmpty(Model.OriginalImageBase64))
                                    {
                                        <div class="card h-100 border-0 shadow-sm">
                                            <div class="card-header bg-secondary text-white py-2 small fw-bold">ŞU ANKİ HALİNİZ</div>
                                            <div class="card-body p-2">
                                                <img src="data:image/jpeg;base64,@Model.OriginalImageBase64"
                                                     class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" alt="Orijinal" />
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-light border">Fotoğraf yüklenmedi.</div>
                                    }
                                </div>

                                <div class="col-md-6 animate__animated animate__fadeInRight">
                                    @if (!string.IsNullOrEmpty(Model.GeneratedImageBase64))
                                    {
                                        <div class="card h-100 border-0 shadow-sm">
                                            <div class="card-header bg-primary text-white py-2 small fw-bold">POTANSİYEL FORMUNUZ (AI)</div>
                                            <div class="card-body p-2 position-relative rounded overflow-hidden p-0">
                                                <img src="data:image/png;base64,@Model.GeneratedImageBase64"
                                                     class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" alt="AI Sonuç" />
                                                <span class="position-absolute bottom-0 end-0 bg-dark text-white px-2 py-1 small opacity-75">AI ile Üretildi</span>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning border d-flex align-items-center justify-content-center h-100">
                                            <small>AI görseli oluşturulamadı.<br>(API limiti veya hata)</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-secondary d-flex align-items-center mt-3" role="alert">
                                <i class="bi bi-camera-video-off fs-4 me-2"></i>
                                <div>Fotoğraf yüklemediğiniz için sadece metin planı oluşturuldu.</div>
                            </div>
                        }

                    </div>
                    <div class="card-footer bg-white text-center border-0 pb-4 mt-3">
                        <a href="/Appointments/Create" class="btn btn-outline-success btn-lg rounded-pill px-5 shadow-sm">
                            📅 Bu Hedef İçin Randevu Al
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="h-100 d-flex flex-column align-items-center justify-content-center text-muted border rounded bg-white p-5 text-center shadow-sm">
                    <div class="display-1 mb-3 text-secondary">📊</div>
                    <h3>AI Destekli Program</h3>
                    <p class="lead">Sol taraftaki formu doldurun. Yaşınıza, vücut tipinize ve hedeflerinize uygun en doğru planı saniyeler içinde alın.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}